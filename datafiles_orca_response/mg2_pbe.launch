#!/bin/bash

#SBATCH --account=nn9330k
#SBATCH --job-name=mg2_pbe
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=4
#SBATCH --mem=10GB
#SBATCH --time=4:00:00
#SBATCH --partition=singlenode
#SBATCH --output=mg2_pbe.log
#SBATCH --error=mg2_pbe.err

export OMP_NUM_THREADS=1

module load OpenMPI/3.1.3-GCC-8.2.0-2.31.1

SCRATCH_DIR=/global/work/ambr/ORCA_$SLURM_JOBID
mkdir -p $SCRATCH_DIR

cp mg2_pbe.inp ${SCRATCH_DIR}/

cd $SCRATCH_DIR

export RSH_COMMAND="/usr/bin/ssh -x"
PATH_ORCA=/home/mobst/bin/orca_4_1_2_linux_x86-64_openmpi313/orca
time $PATH_ORCA mg2_pbe.inp >& mg2_pbe.out
cp mg2_pbe.out ${SLURM_SUBMIT_DIR}/
