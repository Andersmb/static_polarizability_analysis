#!/bin/bash

#SBATCH --account=nn9330k
#SBATCH --job-name=bn_pbe_-0001_y
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=4
#SBATCH --mem=30GB
#SBATCH --time=4:00:00
#SBATCH --partition=singlenode
#SBATCH --output=bn_pbe_-0001_y.log
#SBATCH --error=bn_pbe_-0001_y.err

export OMP_NUM_THEADS=1

module load OpenMPI/3.1.3-GCC-8.2.0-2.31.1

SCRATCH_DIR=/global/work/ambr/ORCA_$SLURM_JOBID
mkdir -p $SCRATCH_DIR

cp bn_pbe_-0001_y.inp ${SCRATCH_DIR}/

cd $SCRATCH_DIR

export RSH_COMMAND="/usr/bin/ssh -x"
PATH_ORCA=/home/mobst/bin/orca_4_1_2_linux_x86-64_openmpi313/orca
time $PATH_ORCA bn_pbe_-0001_y.inp >& bn_pbe_-0001_y.out
cp bn_pbe_-0001_y.out ${SLURM_SUBMIT_DIR}/
